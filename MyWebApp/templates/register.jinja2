{% extends "base.html" %}
{% import "bootstrap/wtf.html" as wtf %}

{%block content%}
<div class="login-page">
    <h1 style="font-size: 200%; font-variant-caps: normal; color:purple" id="header" class="display-3 text-center">Register</h1>
    <p></p>
  <div class="form">
    <form class="login-form" method="POST" action="/register">
        {{ form.hidden_tag() }}
        {{ wtf.form_field(form.username) }}
        {{ wtf.form_field(form.password) }}
        {{ wtf.form_field(form.confirm) }}
        {{ wtf.form_field(form.email) }}
        
        
           

        <button type="submit">register</button>
        <p class="message">already registered? <a href="{{ url_for('login') }}">Login here</a></p>
    </form>
  </div>
</div>
{%endblock%}

